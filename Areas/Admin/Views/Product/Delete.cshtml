@using MovieWeb.Areas.Admin.Models;
@model Product

<form method="post">
    <input asp-for="Id" hidden />
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h2 class="text-primary">Delete Product</h2>
            <hr />

        </div>
        <div class="mb-3">
            <label asp-for="Name" class="p-2"></label>
            <input asp-for="Name" disabled class="form-control" />

        </div>
        <div class="mb-3">
            <label asp-for="Rating" class="p-2"></label>
            <input asp-for="Rating" disabled class="form-control" />

        </div>
        <div class="mb-3">
            <label asp-for="Director" class="p-2"></label>
            <input asp-for="Director" disabled class="form-control" />

        </div>
        <div class="mb-3">
            <label asp-for="ListPrice" class="p-2"></label>
            <input asp-for="ListPrice" disabled class="form-control" />

        </div>
        <div class="row">
            <div class="col-6 col-md-3">
                <button type="submit" class="btn btn-primary form-control">Delete</button>
            </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondary form-control border">
                    Back to List

                </a>


            </div>
        </div>
    </div>

</form>
